<Window x:Class="BlackJackWPF_WIP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJackWPF_WIP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF2D6F40"/>
                <GradientStop Color="#FF15351E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Hit_Button" Content="Hit" HorizontalAlignment="Left" Margin="560,174,0,0" VerticalAlignment="Top" Height="30" Width="80" FontSize="18" FontFamily="Georgia">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFEFD2A8"/>
                    <GradientStop Color="#FFE0B370" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Stand_Button" Content="Stand" HorizontalAlignment="Left" Margin="560,244,0,0" VerticalAlignment="Top" Height="30" Width="80" FontSize="18" FontFamily="Georgia">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFEFD2A8"/>
                    <GradientStop Color="#FFE8B76E" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Grid Margin="285,279,415,10">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFDADADA" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>

    </Grid>
</Window>
